<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         id="WebApp_ID" version="3.0">
    <display-name>HostelWorld</display-name>
    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
        <welcome-file>/jsp/index.jsp</welcome-file>
    </welcome-file-list>

    <!-- 把 Spring 容器集成到 Web 应用里面 -->
    <!--<listener>
        <listener-class>
            org.springframework.web.context.ContextLoaderListener
        </listener-class>
    </listener>-->

    <!-- spring配置文件 -->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:/applicationContext.xml</param-value>
    </context-param>

    <!--DispatcherServlet是前端控制器设计模式的实现，提供Spring Web MVC的集中访问点，而且负责职责的分派，
    而且与Spring IoC容器无缝集成，从而可以获得Spring的所有好处。-->
    <!--DispatcherServlet会默认加载[servlet-name]-servlet.xml文件-->
    <!--<servlet>
        <servlet-name>spring</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>spring</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>-->

    <!--解决springmvc传递给后台的中文数据乱码问题-->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>utf-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--my servlet registe-->
    <!--common package-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.nju.servlet.common.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisteServlet</servlet-name>
        <servlet-class>com.nju.servlet.common.RegisteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisteServlet</servlet-name>
        <url-pattern>/RegisteServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.nju.servlet.common.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>

    <!--hostel package-->
    <servlet>
        <servlet-name>HostelInfoServlet</servlet-name>
        <servlet-class>com.nju.servlet.hostel.HostelInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HostelInfoServlet</servlet-name>
        <url-pattern>/HostelInfoServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HostelManageServlet</servlet-name>
        <servlet-class>com.nju.servlet.hostel.HostelManageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HostelManageServlet</servlet-name>
        <url-pattern>/HostelManageServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HostelPlanServlet</servlet-name>
        <servlet-class>com.nju.servlet.hostel.HostelPlanServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HostelPlanServlet</servlet-name>
        <url-pattern>/HostelPlanServlet</url-pattern>
    </servlet-mapping>

    <!--manager package-->
    <servlet>
        <servlet-name>CheckInfoServlet</servlet-name>
        <servlet-class>com.nju.servlet.manager.CheckInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckInfoServlet</servlet-name>
        <url-pattern>/CheckInfoServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ManageInfoServlet</servlet-name>
        <servlet-class>com.nju.servlet.manager.ManageInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManageInfoServlet</servlet-name>
        <url-pattern>/ManageInfoServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PayoffServlet</servlet-name>
        <servlet-class>com.nju.servlet.manager.PayoffServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PayoffServlet</servlet-name>
        <url-pattern>/PayoffServlet</url-pattern>
    </servlet-mapping>
    <!--my servlet registe completed-->

</web-app>